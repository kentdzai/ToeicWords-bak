<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootNgheLap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.groupthree.toeicword.controller.luyentap.NgheLapActivity">

    <TextView
        android:id="@+id/tvnlType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="(v)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvnlWord"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Resolve"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvnlPhonetic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="[ri'zɔlv]"
        android:textColor="@color/blue_btn_bg_pressed_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvnlMean"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="giải quyết; quyết tâm; kiên quyết; quyết định"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvnlSentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:gravity="center"
        android:padding="20dp"
        android:text="The mediator was able to (resolve) the problem to everyone's satisfaction"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvnlSentenceMean"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Người trung gian dàn xếp có thể giải quyết vấn đề làm thỏa mãn tất cả mọi người"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>

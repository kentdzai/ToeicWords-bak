                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_nghelap" />

            <TextView
                android:id="@+id/tvLuyenTap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

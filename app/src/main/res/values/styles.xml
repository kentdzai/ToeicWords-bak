<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnMain" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="btnLuyenNghe" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">
            @color/blue_btn_bg_pressed_color
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/colorPrimaryDark
        </item>
        <item name="android:radius">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="my_button">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cuttom_button</item>
    </style>

    <style name="btnFail">
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">
            #e1bf0e2b
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            #e1bf0e2b
        </item>
    </style>

    <style name="my_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#10ffffff</item>
    </style>
</resources>
